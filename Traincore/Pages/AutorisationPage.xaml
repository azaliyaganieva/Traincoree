<Page x:Class="Traincore.Pages.AutorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Traincore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MaxHeight="1080" MaxWidth="1920" MinHeight="450" MinWidth="800"
      Title="AutorisationPage"  >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resourse/fon.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions >
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="TRAINCORE"  Foreground="Firebrick" FontStyle="Italic" FontWeight="Bold"  FontSize="50" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" TextAlignment="Center"/>
        <Button x:Name="btnVhod" Content="Войти" FontSize="24"  Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Width="200" Height="50" Click="btnVhod_Click" Background="White"/>
        <Button x:Name="btnReg" Content="Зарегистрироваться" FontSize="20"  Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Width="200" Height="50" Click="btnReg_Click" Background="White"/>


    </Grid>
</Page>
