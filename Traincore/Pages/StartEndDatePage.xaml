<Page x:Class="Traincore.Pages.StartEndDatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Traincore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MaxHeight="1080" MaxWidth="1920" MinHeight="450" MinWidth="800"
      Title="StartEndDatePage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resourse/fon5.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <TextBlock Text="Выберите,пожалуйста,откуда и куда Вы хотите поехать." FontFamily="Impact"  FontSize="25" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="10,20,10,16" Foreground="DarkRed" TextAlignment="Center"  />
        <TextBlock Text="Добро пожаловать,дорогой Клиент!" FontFamily="Impact"  FontSize="27" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="10,20,10,16" Foreground="DarkRed" TextAlignment="Center"  />
        <TextBlock Text="Откуда:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="0"  Grid.Row="2" Margin="10,10,10,10" Foreground="DarkRed" TextAlignment="Right" />
        <TextBlock Text="Куда:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="0"  Grid.Row="3" Margin="10,10,10,10" Foreground="DarkRed" TextAlignment="Right" />
        <TextBlock Text="Дата:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="0"  Grid.Row="4" Margin="10,10,10,10" Foreground="DarkRed" TextAlignment="Right" />
        <ComboBox x:Name="FromComboBox" Width="300" Grid.Column="1" Grid.Row="2" Margin="10">
            <ComboBoxItem Content="Москва-Пассажирская" />
            <ComboBoxItem Content="Санкт-Петербург-Главный" />
            <ComboBoxItem Content="Нижний Новгород-1" />
            <ComboBoxItem Content="Казань-Пасс" />
            <ComboBoxItem Content="Екатеринбург-Пасс" />
            <ComboBoxItem Content="Новосибирск-Главный" />
            <ComboBoxItem Content="Самара-2" />
            <ComboBoxItem Content="Ростов-на-Дону" />
        </ComboBox>
        <Label Content="Куда:" />
        <ComboBox x:Name="ToComboBox" Width="300" Grid.Column="1" Grid.Row="3" Margin="10">
            <ComboBoxItem Content="Москва-Пассажирская" />
            <ComboBoxItem Content="Санкт-Петербург-Главный" />
            <ComboBoxItem Content="Нижний Новгород-1" />
            <ComboBoxItem Content="Казань-Пасс" />
            <ComboBoxItem Content="Екатеринбург-Пасс" />
            <ComboBoxItem Content="Новосибирск-Главный" />
            <ComboBoxItem Content="Самара-2" />
            <ComboBoxItem Content="Ростов-на-Дону" />
        </ComboBox>
        <DatePicker x:Name="Datetxb" FontSize="15" Grid.Column="1" Margin="102,69,102,41"   Grid.Row="3"  Width="300" Height="40" Grid.RowSpan="2" />
        
        <Button x:Name="btnDalee" Content="Далее" FontFamily="Aria" FontSize="20" Grid.Column="1"  Margin="2,20,305,18" Grid.Row="5" Click="btnDalee_Click" Background="White"  Height="37" Width="190"  />
    </Grid>
</Page>
