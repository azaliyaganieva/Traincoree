<Page x:Class="Traincore.Pages.VhodPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Traincore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MaxHeight="1080" MaxWidth="1920" MinHeight="450" MinWidth="800"
      Title="VhodPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resourse/fon4.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="126*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация" FontSize="28" FontFamily="Impact" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Margin="41,10,211,10" Foreground="DarkRed" TextAlignment="Center"  />
        <TextBlock Text="Логин:" FontSize="28" Grid.Column="0" Grid.ColumnSpan="2" FontFamily="Impact"  Grid.Row="2" Margin="10,6,0,14" Foreground="DarkRed" TextAlignment="Center"  />
        <TextBlock Text="Пароль:" FontSize="28" Grid.Column="0" Grid.ColumnSpan="2" FontFamily="Impact" Grid.Row="3" Margin="10,4,0,16" Foreground="DarkRed" TextAlignment="Center"  />
        <TextBox x:Name="Logintxb" FontSize="20" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,0,9" Grid.Row="2"  TextAlignment="Center" HorizontalAlignment="Left" Width="426"  />
        <PasswordBox x:Name="Parolpsw" FontSize="20" Grid.Column="2" Margin="10,10,78,9" Grid.Row="3"  />
        <Button x:Name="Vhodbtn" Content="Войти" FontSize="20" FontFamily="Aria"  Margin="185,16,213,14" Grid.Row="5" Click="Vhodbtn_Click" Background="White" Grid.ColumnSpan="3" Width="150" Height="35" />
        <Button x:Name="btnReg" Content="Зарегистрироваться" FontSize="20" FontFamily="Aria" Grid.Column="2"  Margin="177,13,151,17" Grid.Row="5" Click="btnReg_Click" Background="White" Grid.ColumnSpan="2"  Width="190" Height="35" />
    </Grid>
</Page>
