<Page x:Class="Traincore.Pages.TrainSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Traincore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MaxHeight="1080" MaxWidth="1920" MinHeight="450" MinWidth="800"
      Title="TrainSelectionPage">

    <Grid>
        <ListView x:Name="TrainsListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Номер поезда" DisplayMemberBinding="{Binding Trains.Number_train}" Width="80"/>
                    <GridViewColumn Header="Отправление" DisplayMemberBinding="{Binding Schedule.Date_Start}" Width="100"/>
                    <GridViewColumn Header="Время отправления" DisplayMemberBinding="{Binding Schedule.Time_Start}" Width="100"/>
                    <GridViewColumn Header="Прибытие" DisplayMemberBinding="{Binding Schedule.Date_finish}" Width="100"/>
                    <GridViewColumn Header="Время прибытия" DisplayMemberBinding="{Binding Schedule.Time_finish}" Width="100"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type_trains.Name_type_train}" Width="80"/>
                    <GridViewColumn Header="Места" DisplayMemberBinding="{Binding Seats.IsAvailable}" Width="60"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Seats.Price}" Width="60"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Выбрать" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="100" Click="Button_Click"/>
    </Grid>
</Page>
