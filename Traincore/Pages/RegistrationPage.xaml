<Page x:Class="Traincore.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Traincore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MaxHeight="1080" MaxWidth="1920" MinHeight="450" MinWidth="800"
      Title="RegistrationPage" >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resourse/fon4.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация" FontFamily="Impact"  FontSize="27" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" Margin="10,4,10,16" Foreground="DarkRed" TextAlignment="Center"  />
        <TextBlock Text="Имя:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="1"  Grid.Row="1" Margin="10,8,0,12" Foreground="DarkRed" TextAlignment="Right" Height="40" />
        <TextBlock Text="Фамилия:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="1"  Grid.Row="2" Margin="10,10,0,7" Foreground="DarkRed" TextAlignment="Right" Height="40" />
        <TextBlock Text="Номер паспорта:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Margin="80,14,0,2" Foreground="DarkRed" TextAlignment="Right" Height="40" />
        <TextBlock Text="Почта:" FontSize="26" Grid.Column="1" FontFamily="Miramont " FontWeight="Bold"  Grid.Row="4" Margin="10,10,0,6" Foreground="DarkRed" TextAlignment="Right" Height="40" />
        <TextBlock Text="Номер телефона:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Margin="57,12,0,4" Foreground="DarkRed" TextAlignment="Right" Height="40" />
        <TextBlock Text="Пароль:" FontSize="26" FontFamily="Miramont " FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Margin="104,6,0,10" Foreground="DarkRed" TextAlignment="Right" Height="40" />
        <TextBox x:Name="Nametxb" FontSize="15" Grid.Column="2"  Grid.ColumnSpan="2" Margin="10,4,10,12"  TextAlignment="Center" TextChanged="Nametxb_TextChanged" Grid.Row="1"  />
        <TextBox x:Name="Famxb" FontSize="15" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="2"  TextAlignment="Center" TextChanged="Famxb_TextChanged"  />
        <TextBox x:Name="NumPassporttxb" FontSize="15" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,14,10,0" Grid.Row="3"  TextAlignment="Center" Height="40" VerticalAlignment="Top"  />
        <TextBox x:Name="Emailtxb" FontSize="15" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="4"  TextAlignment="Center"  />
        <TextBox x:Name="NumPhonetxb" FontSize="15" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="5"  TextAlignment="Center"  />
        <TextBox x:Name="Passwordtxb" FontSize="15" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="6"  TextAlignment="Center"  />
        <Button x:Name="btnReg" Content="Зарегистрироваться" FontFamily="Aria" FontSize="20" Grid.Column="2" Grid.ColumnSpan="2"  Margin="60,4,60,2" Grid.Row="7"  Height="37" Width="190" Click="btnReg_Click" Background="White"  />

    </Grid>
</Page>
