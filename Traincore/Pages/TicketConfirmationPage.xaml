<Page x:Class="Traincore.Pages.TicketConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Traincore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TicketConfirmationPage">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Бронирование завершено!" 
                       FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="{Binding TicketNumber}" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding PassengerName}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding TrainInfo}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding RouteInfo}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding DateInfo}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding SeatInfo}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Price}" FontWeight="Bold" Margin="0,0,0,20"/>

            <Button Content="Вернуться к поиску" 
                    HorizontalAlignment="Center" 
                    Width="200" Click="HomeButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
